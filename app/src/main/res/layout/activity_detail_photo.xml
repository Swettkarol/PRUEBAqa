<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.sections.photos.detail.DetailPhotoActivity"
        android:background="@color/theme_transparent_ninety">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars[3]"
            android:id="@+id/photoImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/closeImageButton" android:scaleType="centerCrop"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/ic_close"
            android:id="@+id/closeImageButton" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop" android:background="@null" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/titleTextView" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/photoImageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:textSize="18sp" android:textColor="@android:color/white"
            android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>